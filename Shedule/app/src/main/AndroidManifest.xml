<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shedule" >

    <uses-permission android:name="android.permission.INTERNET" /> //позволяет открывать интернет соединения
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/> // позволяет приложению получать доступ к информации о сетях

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shedule" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Shedule.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SheduleGroupActivity"
            android:label="@string/title_activity_shedule_group"
            android:theme="@style/Theme.Shedule.NoActionBar" >
        </activity>
    </application>

</manifest>